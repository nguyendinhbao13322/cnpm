@model doan.Models.SanPham
@{
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main id="main" class="main">
	<div class="pagetitle">
		<h2>Thêm Sản Phẩm</h2>
	</div>
	<form method="POST" asp-action="Them">
		<div class="form-group">
			<label asp-for="TenSanPham">Tên sản phẩm</label>
            <input type="text" class="form-control" asp-for="TenSanPham">
		</div>
		
        <div class="form-group col-md-6">
            <label class="control-label">Ảnh</label>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <button class="btn btn-success" type="button" onclick="openDialog()">Chọn hình ảnh</button>
                </div>
                <input type="text" class="form-control" asp-for="Anh" id="file_input" aria-describedby="button-addon2">
            </div>
        </div>
        <div class="form-group">
            <label asp-for="MoTa">Mô tả</label>
            <textarea class="form-control" asp-for="MoTa"></textarea>
        </div>
        <div class="form-group">
            <label asp-for="Gia">Giá</label>
            <input type="text" class="form-control" asp-for="Gia">
        </div>

        
        <div class="form-group">
            <div class="alert-danger" asp-validation-summary="ModelOnly"></div>
            <label asp-for="IDDanhMuc">Danh mục</label>
            <select class="form-control" asp-for="IDDanhMuc" asp-items="@(new SelectList(ViewBag.dsdm, "Value", "Text"))">
            </select>
        </div>

        <div class="form-group mt-5 mb-5">
            <label>
                @Html.CheckBox("TrangThai", true)
                Hiển thị
            </label>
        </div>
		<button type="submit" class="btn btn-primary">Thêm</button>
	</form>
</main>

@{
    var summerNote = new doan.Areas.Admin.Models.SummerNote("#MoTa");
    <partial name="_SummerNote" model="summerNote"/>
}