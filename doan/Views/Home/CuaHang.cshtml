@model IList<SanPham>

<!-- BREADCRUMB -->
<div id="breadcrumb" class="section">
	<!-- container -->
	<div class="container">
		<!-- row -->
		<div class="row">
			<div class="col-md-12">
				<ul class="breadcrumb-tree">
					<li><a href="/">Trang chủ</a></li>
					<li><a href="#" style="color: #000 !important;">@ViewBag.TenDanhMuc</a></li>
				</ul>
			</div>
		</div>
		<!-- /row -->
	</div>
	<!-- /container -->
</div>
<!-- /BREADCRUMB -->
<!-- SECTION -->
<div class="section">
	<!-- container -->
	<div class="container">
		<!-- row -->
		<div class="row">
			<!-- ASIDE -->
			<div id="aside" class="col-md-3">
				<!-- aside Widget -->
				<div class="aside">
					<h3 class="aside-title">Danh mục sản phẩm</h3>
					
					@foreach(var item in ViewBag.dsdm){
						<div class="product-widget">
							<div class="product-body" style="padding-left: 0px; min-height: unset;">
								<h3 class="product-name"><a asp-controller="Home" asp-action="CuaHang" asp-route-iddanhmuc="@item.ID">@item.TenDanhMuc</a></h3>
							</div>
						</div>
					}

				</div>
				<!-- /aside Widget -->
			</div>
			<!-- /ASIDE -->
			<!-- STORE -->
			<div id="store" class="col-md-9">
				<!-- store products -->
				<div class="row">


					<!-- product -->
					@foreach(var item in Model)
					{
						<div class="col-md-4 col-xs-6">
							<div class="product">
								<div class="product-img">
									<img src="@item.Anh" alt="">
									<div class="product-label">
										<span class="sale">-30%</span>
										<span class="new">NEW</span>
									</div>
								</div>
								<div class="product-body">
									
									<h3 class="product-name"><a asp-controller="Home" asp-action="ChiTietSanPham"  asp-route-id="@item.ID">@item.TenSanPham</a></h3>
									<h4 class="product-price">$@item.Gia</h4>
									<div class="product-rating">
										<i class="fa fa-star"></i>
										<i class="fa fa-star"></i>
										<i class="fa fa-star"></i>
										<i class="fa fa-star"></i>
										<i class="fa fa-star"></i>
									</div>
									
								</div>
								<div class="add-to-cart">
									<a class="add-to-cart-btn" style="display: inline-block;line-height: 38px;" asp-controller="Home" asp-action="ChiTietSanPham" asp-route-id="@item.ID"><i class="fa fa-shopping-cart"></i> Xem chi tiết</a>
								</div>
							</div>
						</div>	
						}								
					<!-- /product -->
					


				</div>
				<!-- /store products -->
				<!-- store bottom filter -->
				<div class="store-filter clearfix">
					
					<ul class="store-pagination">
						<li class="active">1</li>
						<li><a href="#">2</a></li>
						<li><a href="#">3</a></li>
						<li><a href="#">4</a></li>
						<li><a href="#"><i class="fa fa-angle-right"></i></a></li>
					</ul>
				</div>
				<!-- /store bottom filter -->
			</div>
			<!-- /STORE -->
		</div>
		<!-- /row -->
	</div>
	<!-- /container -->
</div>